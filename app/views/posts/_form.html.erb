<!-- -----------------------------------------------------------------------------------  -->
<% connected = current_user %>
<% if connected %><% isadmin = (current_user.has_role? :admin) %><% end %>

<% if !(connected) %>
  <div class="errorcustom"> ERROR: Debes estar conectado a tu cuenta para postear </div>
<% elsif !(Suscription.exists?(:user_id => current_user.id, :course_id => params[:course_id])) %>
  <div class="errorcustom"> ERROR: Debes estar registrado en el curso para poder publicar </div>
<% else %>

  <%= form_with(model: post, local: true) do |form| %>
    <% if post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label "Usuario" %>
      <!-- Este es solo para que se vea bonito, realmente no hace nada-->
      <%= form.text_field :placeholder2,
                          id: :post_user_id,
                          value: current_user.username,
                          disabled: true %>
      <!-- --------------------------------------------------------- -->
      <% form.hidden_field :user_id,
                           value: current_user.id %>
    </div>

    <div class="field">

      <%= form.label "Sigla curso" %>
      <!-- Este es solo para que se vea bonito, realmente no hace nada-->
      <%= form.text_field :placeholder,
                          id: :post_course_id,
                          disabled: true,
                          value: Course.find(params[:course_id]).name %>
      <!-- --------------------------------------------------------- -->

      <%= form.hidden_field :course_id,
                            :value => params[:course_id] %>
    </div>

    <div class="field">
      <%= form.label "Título de la publicación" %>
      <%= form.text_field :title, id: :post_title %>
    </div>

    <div class="field">
      <%= form.label "Contenido" %>

      <%= form.cktext_area :content,
                           id: :post_content,
                           rows: 30,
                           label: "Contenido del post"%>
    </div>



    <div class="field">
      <%= form.label "Calificación" %>
      <!-- Este es solo para que se vea bonito, realmente no hace nada-->
      <%= form.text_field :placeholder3,
                          id: :post_rate,
                          value: 0.0,
                          disabled: true %>
      <!-- --------------------------------------------------------- -->
      <%= form.hidden_field :rate,
                            :value => 0 %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>


<% end %>
