<%= form_with(model: postcomment, local: true) do |form| %>


    <%= form.text_field :content,
                        :placeholder => "Escribe tu comentario" %>
    <%= form.hidden_field :post_id,
                          :value => @post.id %>
    <%= form.hidden_field :user_id,
                          :value => current_user.id %>
    <%= form.hidden_field :rate,
                          :value => 0 %>

<% end %>
