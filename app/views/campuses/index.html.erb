<p id="notice"><%= notice %></p>

<h1>Campuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Location map</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campuses.each do |campus| %>
      <tr>
        <td><%= campus.name %></td>
        <td><%= campus.description %></td>
        <td><%= campus.location_map %></td>
        <td><%= link_to 'Show', campus %></td>
        <% if current_user and current_user.has_role? :admin %>
        <td><%= link_to 'Edit', edit_campus_path(campus) %></td>
        <td><%= link_to 'Destroy', campus, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr
    <% end %>
  </tbody>
</table>

<br>
<% if current_user and current_user.has_role? :admin %>
<%= link_to 'New Campus', new_campus_path %>
<% end %>
