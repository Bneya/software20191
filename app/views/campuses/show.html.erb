<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @campus.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @campus.description %>
</p>

<p>
  <strong>Location map:</strong>
  <%= @campus.location_map %>
</p>

<p>
  <strong>Cursos en el campus: </strong>
  <% Course.where(campus_id: @campus.id).each do |course| %>
    <%= link_to "Curso %s" [course.name], courses_path(course) %>
    <% end %>
  </p>

<% if current_user and current_user.has_role? :admin %>
<%= link_to 'Edit', edit_campus_path(@campus) %> |
<%end%>
<%= link_to 'Back', campuses_path %>
