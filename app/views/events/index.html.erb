<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Classroom</th>
      <th>Course</th>
      <th>Schedule</th>
      <th>Day</th>
      <th>Event type</th>
      <th>Actual users</th>
      <th>Max users</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.classroom_id %></td>
        <td><%= event.course_id %></td>
        <td><%= event.schedule %></td>
        <td><%= event.day %></td>
        <td><%= event.event_type %></td>
        <td><%= event.actual_users %></td>
        <td><%= event.max_users %></td>
        <td><%= event.price %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Evento', new_event_path %>
